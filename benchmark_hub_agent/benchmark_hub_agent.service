[Unit]
Description=BenchMarkHubAgent

[Service]
Type=simple
User=ubuntu
Group=ubuntu
Restart=on-failure
Environment=MIX_ENV=prod
Environment=LANG=en_US.UTF-8
Environment=RELEASE_COOKIE=changeit
Environment=RELEASE_NODE=agent@changehost
Environment=RELEASE_DISTRIBUTION=name
Environment=HOME=/home/ubuntu

WorkingDirectory=/home/ubuntu

ExecStart=/home/ubuntu/performance-benchmark-stacks/benchmark_hub_agent/_build/prod/rel/agent/bin/agent start
ExecStop=/home/ubuntu/performance-benchmark-stacks/benchmark_hub_agent/_build/prod/rel/agent/bin/agent stop

[Install]
WantedBy=multi-user.target
